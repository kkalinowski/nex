<UserControl x:Class="nex.Controls.DirectoryViews.SmallIconsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:lib12="http://schemas.kkalinowski.net/lib12">

    <ListBox Name="lbContent" SelectionMode="Extended" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemTemplate="{StaticResource FileShortNameTemplate}"
             ItemContainerStyle="{StaticResource SmallIconsDirectoryViewItemStyle}" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <lib12:EventTranscriptions.Transcriptions>
            <lib12:EventTranscription EventName="MouseDoubleClick" Command="{Binding ExecuteItemCommand}"/>
        </lib12:EventTranscriptions.Transcriptions>
        <i:Interaction.Behaviors>
            <lib12:ListBoxSelectedItemsBinding SelectedItems="{Binding SelectedItems, Mode=OneWayToSource}"/>
        </i:Interaction.Behaviors>
    </ListBox>
</UserControl>
