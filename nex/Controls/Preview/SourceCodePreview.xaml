<UserControl x:Class="nex.Controls.Preview.SourceCodePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <avalon:TextEditor Name="tSource" VerticalAlignment="Stretch" Padding="2" IsReadOnly="True" ShowLineNumbers="True"
                       VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                       Background="{StaticResource MainColor}" Foreground="{StaticResource FontColor}"/>
</UserControl>
