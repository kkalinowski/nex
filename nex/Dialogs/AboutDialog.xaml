<Window x:Class="nex.Controls.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="O programie" WindowStyle="ToolWindow" Height="300" Width="520"
        Background="{StaticResource MainGradient}" KeyDown="Window_KeyDown"> 
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Source="/nex;component/Icons/largeLogo.png"/>
        
        <TextBlock Name="tInfo" Grid.Column="1" Text="Program nex" HorizontalAlignment="Center"/>
        <Button Name="bClose" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"
                IsDefault="True" Content="Zamknij" Click="bClose_Click" />
    </Grid>
</Window>
